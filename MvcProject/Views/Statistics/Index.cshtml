
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<link href="~/Content/bootstrap.min.css" rel="stylesheet" />

<br />
<br />
<div class="card-group">
    <div class="alert alert-success ml-5" role="alert" style="width:25%">
        <h4 class="alert-heading text-center">Toplam Kategori Sayısı</h4>
        <hr />
        <p class="text-center" style="font-size:15px">@ViewBag.categoryCount</p>
    </div>
    <div class="alert alert-success ml-5" role="alert" style="width:25%">
        <h4 class="alert-heading text-center">Yazılım Kategorisine Ait Başlık Sayısı</h4>
        <hr />
        <p class="text-center" style="font-size:15px">@ViewBag.headingCountByCategoryName</p>
    </div>
    <div class="alert alert-success ml-5" role="alert" style="width:25%">
        <h4 class="alert-heading text-center">Adında 'A' Harfi Geçen Yazar Sayısı</h4>
        <hr />
        <p class="text-center" style="font-size:15px">@ViewBag.writerCount</p>
    </div>
    <div class="alert alert-success ml-5" role="alert" style="width:25%">
        <h4 class="alert-heading text-center">En Fazla Başlığa Sahip Kategori Adı</h4>
        <hr />
        <p class="text-center" style="font-size:15px">@ViewBag.mostRecurringCategoryName</p>
    </div>
    <div class="alert alert-success ml-5" role="alert" style="width:25%">
        <h4 class="alert-heading text-center">Kategori Tablosunda Durumu True Olan Ile False Olan Kategori Arasındaki Sayısal Fark</h4>
        <hr />
        <p class="text-center" style="font-size:15px">@ViewBag.difference</p>
    </div>
</div>


