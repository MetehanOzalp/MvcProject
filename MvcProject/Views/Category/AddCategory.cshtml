@model Entities.Concrete.Category

@{
    Layout = null;
}

<link href="~/Content/bootstrap.min.css" rel="stylesheet" />

<h1>Yeni Kategori Ekleme Sayfası</h1>
<br />
@using (Html.BeginForm("AddCategory", "Category", FormMethod.Post))
{
    <div class="form-group">
        @Html.Label("Kategori Adı")
        @Html.TextBoxFor(c => c.Name)
        @Html.ValidationMessageFor(c => c.Name)
        <br />
        <br />
        @Html.Label("Açıklama Giriniz")
        @Html.TextBoxFor(c => c.Description)
        @Html.ValidationMessageFor(c => c.Description)
        <br />
        <br />
        <button class="btn btn-success">Kaydet</button>
    </div>
}

